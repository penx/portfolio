# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8

# Avoid enforcing these settings on 3rd party libs, e.g. those in bower_components, node_modules
[{source/**,views/**}.{js,scss,html,jsx,ejs}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*/{package.json}]
indent_style = space
indent_size = 2

