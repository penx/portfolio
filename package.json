{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Isomorphic React Portfolio Site",
  "main": "source/server.js",
  "scripts": {
    "postinstall": "npm run build",
    "start": "node dist/server/app.js",
    "build": "npm run build:shared && npm run build:server && npm run build:client && npm run build:styles",
    "build:shared": "babel source/shared -d dist/shared",
    "build:server": "babel source/server -d dist/server",
    "build:client": "npm run webpack",
    "build:styles": "node-sass source/styles/main.scss dist/styles/main.css --output-style compressed",
    "webpack": "webpack"
  },
  "author": "Alasdair McLeay",
  "license": "ISC",
  "dependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.1",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.16.0",
    "bootstrap": "^4.0.0-alpha.5",
    "compression": "^1.6.2",
    "ejs": "^2.4.1",
    "express": "^4.13.4",
    "isomorphic-fetch": "^2.2.1",
    "material-design-lite": "^1.2.1",
    "node-sass": "^3.13.0",
    "portfolio-api": "penx/portfolio-api",
    "portfolio-api-blueprint": "penx/portfolio-api-blueprint",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-router": "^2.0.0",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "webpack": "^1.13.3"
  }
}
